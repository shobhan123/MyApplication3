<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fff6f7ff">

    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HEALTH CAMPAIGN"
        android:gravity="center"
        android:id="@+id/textView8"
        android:textColor="#ffff7f3e"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:weightSum="1"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Set Budget"
            android:id="@+id/button"
            android:background="#ff626262"
            android:layout_marginBottom="15dp"
            />


        <EditText

            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bordertext"
            android:paddingBottom="15dp"
            android:id="@+id/reach"
            android:layout_below="@+id/editText2"
            android:layout_marginTop="36dp"
            android:layout_toLeftOf="@+id/textView9"
            android:textColor="#ff060606"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />


        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bordertext"
            android:paddingBottom="15dp"
            android:id="@+id/editText2"
            android:layout_below="@+id/button"
            android:layout_toStartOf="@+id/textView7"
            android:textColor="#ff060606"
            android:layout_toLeftOf="@+id/textView7" />
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TableRow>>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="  Rupees"
            android:id="@+id/textView7"
            android:textColor="#ff020202"
            android:layout_above="@+id/reach"
            android:layout_alignRight="@+id/textView10"
            android:layout_alignEnd="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="  Reach"
            android:id="@+id/textView9"
            android:textColor="#ff070707"
            android:layout_above="@+id/buttonnae"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Likely"

            android:id="@+id/buttonnae"
            android:background="#ff626262"
            android:layout_below="@+id/reach"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="55dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="4 Enquiries"
            android:id="@+id/textView10"
            android:textColor="#ff080808"
            android:layout_above="@+id/button9"
            android:layout_toLeftOf="@+id/button10"
            android:layout_toStartOf="@+id/button10"
            android:layout_marginBottom="49dp" />

        <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/button8"
                 android:layout_weight=".3"
                 android:gravity="center_horizontal"
            android:background="#3a5795"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:gravity="center_horizontal"
            android:id="@+id/buttonSend"
            android:layout_weight=".3"
            android:background="#3a5795"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button10"
            android:gravity="center_horizontal"
            android:layout_weight=".3"
            android:background="#3a5795"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>



</RelativeLayout>